{% if mcu_kit == "ek_ra2e1" %}
  - op: change_pin
    id: sci1
    attr: mode
    value: mode.disabled
    success: yes
{% endif %}

{% if mcu_kit == "ek_ra6m4" %}
  # disable spi1
  - op: change_pin
    id: spi1
    attr: mode
    value: mode.disabled
    success: yes
{% endif %}

{% if mcu_kit == "ek_ra6m5" %}
  # disable spi1
  - op: change_pin
    id: spi1
    attr: mode
    value: mode.disabled
    success: yes
{% endif %}

{% if mcu_kit == "ek_ra8m1" %}
  # disable spi1
  - op: change_pin
    id: sci2
    attr: mode
    value: mode.disabled
    success: yes
{% endif %}

{% if mcu_kit == "fpb_ra0e1" %}
  - op: change_connectivity
    id: adc0
    pin: an005
    port: none
    success: yes
    # change the mode config of port (RTS) to *output low mode*
  - op: change_pin
    id: p013
    attr: gpio_mode
    value: gpio_mode.gpio_mode_out.low
    success: yes
    # change the mode config of port (Reset) to *output low mode*
  - op: change_pin
    id: p102
    attr: gpio_mode
    value: gpio_mode.gpio_mode_out.low
    success: yes

  # disable input 
  - op: change_pin
    id: p100
    attr: gpio_mode
    value: gpio_mode.disabled
    success: yes

  # disable input 
  - op: change_pin
    id: p101
    attr: gpio_mode
    value: gpio_mode.disabled
    success: yes
{% endif %}

{% if mcu_kit == "ek_ra6m3" %}
  # disable spi1
  - op: change_pin
    id: spi1
    attr: mode
    value: mode.disabled
    success: yes
  # change the operation mode of sci0 to asynchronous uart
  - op: change_pin
    id: sci8
    attr: mode
    value: mode.disabled
    success: yes
{% endif %}


  # change the operation mode of to asynchronous uart
  - op: change_pin
    id: {{board.pmod.pmod2.pmod_uart.uart.channel}}
    attr: mode
{% if mcu_kit == "ek_ra8m1" or mcu_kit == "ek_ra8d1" or mcu_kit == "fpb_ra6e2" or mcu_kit == "ek_ra6e2" or mcu_kit == "ek_ra4e2" or mcu_kit == "bgk_ra6e2" %}
    value: mode.asynchronousuart.free
{%- elif mcu_kit == "fpb_ra0e1" %}
    value: mode.uart.a
{%- else %}
    value: mode.asynchronous.free   
{%- endif %} 

  # change TXD pin
  - op: change_connectivity
    id: {{board.pmod.pmod2.pmod_uart.uart.channel}}
{% if mcu_kit == "ek_ra8m1" or mcu_kit == "ek_ra8d1" or mcu_kit == "fpb_ra0e1" or mcu_kit == "fpb_ra6e2"  or mcu_kit == "ek_ra6e2" or mcu_kit == "ek_ra4e2" or mcu_kit == "bgk_ra6e2" %}
    pin: txd{{board.pmod.pmod2.pmod_uart.uart.channel[-1]}}   # RA8x1 adds the channel number
{%- else %}
    pin: txd   # RA6M4 does not add the channel number on the txd pin    
{%- endif %}  
    port: {{board.pmod.pmod2.pmod_uart.pins.tx}}
    success: yes

  # change RXD pin
  - op: change_connectivity
    id: {{board.pmod.pmod2.pmod_uart.uart.channel}}
{% if mcu_kit == "ek_ra8m1" or mcu_kit == "ek_ra8d1" or mcu_kit == "fpb_ra0e1" or mcu_kit == "fpb_ra6e2"  or mcu_kit == "ek_ra6e2" or mcu_kit == "ek_ra4e2" or mcu_kit == "bgk_ra6e2" %}
    pin: rxd{{board.pmod.pmod2.pmod_uart.uart.channel[-1]}}   # RA8x1 adds the channel number
{%- else %}
    pin: rxd   # RA6M4 does not add the channel number on the rxd pin    
{%- endif %}  
    port: {{board.pmod.pmod2.pmod_uart.pins.rx}}
    success: yes

  # change the mode config of port RESET to *output low mode*
  - op: change_pin
    id: {{board.pmod.pmod2.pmod_uart.pins.reset}}
    attr: gpio_mode
    value: gpio_mode.gpio_mode_out.low
    success: yes

  # change the mode config of port RTS to *output low mode*
  - op: change_pin
    id: {{board.pmod.pmod2.pmod_uart.pins.rts}}
    attr: gpio_mode
    value: gpio_mode.gpio_mode_out.low
    success: yes

